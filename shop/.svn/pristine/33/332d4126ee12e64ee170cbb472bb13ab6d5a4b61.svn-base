<%@ page language="java" import="java.util.*"
	contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="layout.tld" prefix="e"%>

<e:override name="title">股东汇 | 管理平台</e:override>

<e:override name="more_style">
	<style type="text/css">
body {
	background: url(../res/img/bg-login.jpg) !important;
}
</style>
</e:override>

<e:override name="header">
</e:override>

<e:override name="content">

	<div class="container-fluid-full">
		<div class="row-fluid">

			<div class="row-fluid">
				<div class="login-box">
					<div class="icons">
						<a href="<c:url value='/merchant/main.jsp'/>"><i class="halflings-icon home"></i></a> <a
							href="#"><i class="halflings-icon cog"></i></a>
					</div>
					<h2>股东汇 | 管理平台</h2>
					<form class="form-horizontal" action="<c:url value='/merchant/main.jsp'/>" method="post">
						<fieldset>

							<div class="input-prepend" title="Username">
								<span class="add-on"><i class="halflings-icon user"></i></span>
								<input class="input-large span10" name="username" id="username"
									type="text" placeholder="输入用户名" />
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend" title="Password">
								<span class="add-on"><i class="halflings-icon lock"></i></span>
								<input class="input-large span10" name="password" id="password"
									type="password" placeholder="输入密码" />
							</div>
							<div class="clearfix"></div>

							<label class="remember" for="remember"><input
								type="checkbox" id="remember" />记住我</label>

							<div class="button-login">
								<button type="submit" class="btn btn-primary">登录</button>
							</div>
							<div class="clearfix"></div>
							</fieldset>
					</form>
					<hr>
					<h3>忘记密码?&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;No problem, <a href="#">点我</a>找回密码。</h3>
				</div>
				<!--/span-->
			</div>
			<!--/row-->


		</div>
		<!--/.fluid-container-->

	</div>
	<!--/fluid-row-->





</e:override>

<e:override name="footer">
</e:override>

<%@include file="/merchant/main.jsp"%>